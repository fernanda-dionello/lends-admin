@model Lends.Models.Game

@{
    ViewData["Title"] = "Deletar";
}

<div class="jumbotron jumbotron-form">
    <h1 class="h1-subcategories">Deletar Jogo</h1>

    <h4 class="delete-text">Você tem certeza que gostaria de deletar esse jogo?</h4>

    <dl class="dl-style">
        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </div>

        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Category)
            </dd>
        </div>

        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Producer)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Producer.Name)
            </dd>
        </div>

        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.MinPlayers)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.MinPlayers)
            </dd>
        </div>

        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.MaxPlayers)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.MaxPlayers)
            </dd>
        </div>

        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Duration)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Duration)
            </dd>
        </div>

        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Age)
            </dd>
        </div>

        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.RentPrice)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.RentPrice)
            </dd>
        </div>

        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </div>
    </dl>

    <form asp-action="Delete" class="delete-buttons">
        <div>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-outline-danger button-size" />
            <a asp-action="Index" class="btn btn-outline-warning button-size">Retornar</a>
        </div>
        @{
            if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
            {
                <div class="alert alert-dismissible alert-warning alert-size">
                    <button type="button" class="close close-button" data-dismiss="alert">&times;</button>
                    <p class="mb-0">Não é possível deletar esse jogo pois ele está associado a um aluguel.</p>
                </div>
            }
        }
    </form>
</div>
