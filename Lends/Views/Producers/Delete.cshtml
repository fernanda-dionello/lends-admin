@model Lends.Models.Producer

@{
    ViewData["Title"] = "Deletar";
}

<div class="jumbotron jumbotron-form">

    <h1 class="h1-subcategories">Deletar Fabricante</h1>

    <h4 class="delete-text">Você tem certeza que quer deletar esse fabricante?</h4>
    <dl class="dl-style">
        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </div>
        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Cnpj)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Cnpj)
            </dd>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger button-size" />
        <a asp-action="Index" class="btn btn-outline-warning button-size">Retornar</a>
    </form>
</div>