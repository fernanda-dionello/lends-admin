@model IEnumerable<Lends.Models.Producer>

@{
    ViewData["Title"] = "Fabricantes";
}

<div class="jumbotron">

    <h1 class="h1-subcategories">Fabricantes</h1>

    <p>
        <button type="button" asp-action="Create" class="btn btn-primary add-producer">Adicionar Fabricante</button>
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Cnpj)
                </th>
                <th scope ="col"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cnpj)
                </td>
                    <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
