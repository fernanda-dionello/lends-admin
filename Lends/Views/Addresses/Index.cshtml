@model IEnumerable<Lends.Models.Address>

@{
    ViewData["Title"] = "Endereços";
}

<div class="jumbotron">
    <h1 class="h1-subcategories">Endereços</h1>
    <p class="buttons-clients">
        <a asp-action="Create" class="btn btn-primary add-producer">Adicionar endereço</a>
    </p>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ZipCode)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AdditionalInformation)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdditionalInformation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary button-size">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning button-size">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger button-size">Deletar</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
