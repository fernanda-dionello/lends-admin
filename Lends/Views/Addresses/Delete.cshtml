@model Lends.Models.Address

@{
    ViewData["Title"] = "Delete";
}

<div class="jumbotron jumbotron-form">
    <h1 class="h1-subcategories">Deletar Endereço</h1>
    <h4 class="delete-text">Você tem certeza que quer deletar esse endereço?</h4>

    <dl class="dl-style">
        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.ZipCode)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.ZipCode)
            </dd>
        </div>
        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.Number)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.Number)
            </dd>
        </div>
        <div class="details-list">
            <dt class="dt-item col-sm-2 dt-item-key">
                @Html.DisplayNameFor(model => model.AdditionalInformation)
            </dt>
            <dd class="dt-item col-sm-2">
                @Html.DisplayFor(model => model.AdditionalInformation)
            </dd>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger button-size" />
        <a asp-action="Index" class="btn btn-outline-warning button-size">Retornar</a>
        @{
            if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
            {
                <p>Não é possível deletar esse endereço pois ele está associado a um cliente.</p>
            }
        }
    </form>
</div>
